# Database Configuration
DATABASE_URL=postgresql://postgres:password@postgres:5432/ai_pitch_deck
DATABASE_URL_LOCAL=postgresql://postgres:password@localhost:5432/ai_pitch_deck

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_URL_LOCAL=redis://localhost:6379

# AI Model API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Security
SECRET_KEY=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://frontend:3000"]

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-pitch-deck-storage

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# External APIs
CRUNCHBASE_API_KEY=your_crunchbase_api_key
PITCHBOOK_API_KEY=your_pitchbook_api_key

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Background Tasks
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp 